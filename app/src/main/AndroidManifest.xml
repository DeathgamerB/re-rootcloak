<manifest xmlns:tools="http://schemas.android.com/tools"
    package="io.pfuenzle.rerootcloak"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:extractNativeLibs="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="54" />
        <meta-data
            android:name="xposeddescription"
            android:value="@string/module_desc"
            tools:ignore="ManifestResource" />

        <activity
            android:name="io.pfuenzle.rerootcloak.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="de.robv.android.xposed.category.MODULE_SETTINGS" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name="io.pfuenzle.rerootcloak.Settings"
            android:enabled="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:targetActivity="io.pfuenzle.rerootcloak.SettingsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="io.pfuenzle.rerootcloak.NativeRootDetection"
            android:label="@string/native_root_detection"
            android:parentActivityName="io.pfuenzle.rerootcloak.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.pfuenzle.rerootcloak.SettingsActivity" />
        </activity>

        <activity
            android:name="io.pfuenzle.rerootcloak.CustomizeApps"
            android:label="@string/title_activity_customize_apps"
            android:parentActivityName="io.pfuenzle.rerootcloak.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.pfuenzle.rerootcloak.SettingsActivity" />
        </activity>

        <activity
            android:name="io.pfuenzle.rerootcloak.CustomizeKeywords"
            android:label="@string/title_activity_customize_keywords"
            android:parentActivityName="io.pfuenzle.rerootcloak.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.pfuenzle.rerootcloak.SettingsActivity" />
        </activity>

        <activity
            android:name="io.pfuenzle.rerootcloak.CustomizeCommands"
            android:label="@string/title_activity_customize_commands"
            android:parentActivityName="io.pfuenzle.rerootcloak.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.pfuenzle.rerootcloak.SettingsActivity" />
        </activity>

        <receiver android:name="io.pfuenzle.rerootcloak.NativeRootDetectionReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="io.pfuenzle.rerootcloak.REFRESH_APPS" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
